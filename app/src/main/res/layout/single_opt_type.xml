<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.khalid.codecracker.widget.TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="This is the question"
            android:textSize="18dp" />

        <View
            android:id="@+id/room_info_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/solution_detail_divider"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/room_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:visibility="visible">

            <com.khalid.codecracker.widget.TextView
                android:id="@+id/room_info_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/show_answer"
                android:textColor="@color/qa_text_color"
                android:textSize="13sp"
                app:textStyle="medium" />

            <ImageView
                android:id="@+id/room_info_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/read_more"/>

            <com.khalid.codecracker.widget.TextView
                android:id="@+id/answer_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/room_info_header_text"
                android:lineSpacingExtra="2dp"
                android:paddingTop="8dp"
                android:textColor="@color/qa_text_color"
                android:textSize="11sp" />
        </RelativeLayout>

        <View
            android:id="@+id/row_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/solution_detail_divider" />

    </LinearLayout>
</android.support.v7.widget.CardView>
